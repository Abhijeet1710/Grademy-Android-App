<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.SplashActivity"
    android:background="@drawable/ic_splash_background">

    <View
        android:id="@+id/ivG"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_g_white"
        app:layout_constraintBottom_toTopOf="@+id/ivGrademy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ivGrademy"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_grademy_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>