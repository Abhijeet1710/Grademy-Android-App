<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GrademySplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Grademy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black_back</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOnSecondary">@color/black3</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">false</item>
    </style>

    <style name="Theme.GrademyDashboard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/black_back</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>

        <item name="colorOnPrimarySurface">@color/black_back_main</item>

        <item name="colorBackgroundFloating">@color/black2</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle"> @style/NegativeBtnStyle</item>
        <item name="buttonBarPositiveButtonStyle"> @style/PositiveBtnStyle</item>
        <item name="backgroundColor"> @style/BackgroundColor</item>
    </style>
    <style name="BackgroundColor" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:background">@color/black</item>
    </style>
    <style name="PositiveBtnStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NegativeBtnStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="WindowAnimationTransition" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>